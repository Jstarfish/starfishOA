<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- 底部元素 -->
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="#FFFFFF"
	    android:orientation="vertical"
	    android:paddingTop="5dp" >
	    <!-- 除最下面指示划出按钮外的部分 -->
		<LinearLayout
		    android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="10"
		    android:orientation="vertical"
		    android:paddingTop="5dp" >
		    <LinearLayout 
		    	android:orientation="horizontal"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	>
			    <LinearLayout 
			    	android:orientation="vertical"
			    	android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	>
				    <!-- 站点编号 -->
				    <LinearLayout 
				    	android:orientation="horizontal"
				    	android:layout_width="match_parent"
				    	android:layout_height="wrap_content"
				    	>
				    	<TextView
					        android:id="@+id/zhangdianbianhao"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:layout_marginLeft="10dp"
					        android:text="@string/withdraw_station_code"
					        android:textColor="@drawable/gray"
					        android:textSize="@dimen/BodyFont" />
				    	<TextView
					        android:id="@+id/zhangdianbianhaovalue"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:layout_marginLeft="10dp"
					        android:text=""
					        android:textColor="@drawable/gray"
					        android:textSize="@dimen/BodyFont" />
				    </LinearLayout>
				    <!-- 账户余额 -->
				    <LinearLayout 
				    	android:orientation="horizontal"
				    	android:layout_width="match_parent"
				    	android:layout_height="wrap_content"
				    	>
				    	<TextView
					        android:id="@+id/zhanghuyue"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:layout_marginLeft="10dp"
					        android:layout_marginTop="5dp"
					        android:text="@string/withdraw_cash_total"
					        android:textColor="@drawable/red"
					        android:textSize="@dimen/BodyFont" />
					
					    <TextView
					        android:id="@+id/zhanghuyuevalue"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:layout_marginLeft="10dp"
					        android:layout_marginTop="5dp"
					        android:text=""
					        android:textColor="@drawable/red"
					        android:textSize="@dimen/BodyFont" />
				    </LinearLayout>
			    </LinearLayout>
		    
			    <!-- 扫描按钮，扫面动画在一起 -->
			    <RelativeLayout
			        android:id="@+id/saomiaobtnimageimage"
			        android:layout_width="match_parent"
			        android:layout_height="wrap_content"
			        android:layout_marginLeft="50dp"
			        android:layout_marginTop="5dp"
			        android:orientation="horizontal" >
			        <ImageView
			            android:id="@+id/saomiaoimageback"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
						android:visibility="invisible"
			            android:src="@drawable/scan1" >
			        </ImageView>
			        <ImageView
			            android:id="@+id/saomiaoimage"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
						android:visibility="invisible"
			            android:src="@drawable/scan2" >
			        </ImageView>
			        <Button
			            android:id="@+id/saomiaobtn"
			            android:layout_width="45dp"
			            android:layout_height="45dp"
			            android:background="@drawable/redbtn1"
			             >
			        </Button>
			        <ImageView
			            android:id="@+id/saomiaoimage1"
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginTop="4dp"
			            android:layout_marginLeft="4dp"
			            android:src="@drawable/saomiao" >
			        </ImageView>
				</RelativeLayout>
			</LinearLayout>
			<!-- 底部 列表标题栏 -->
		     <LinearLayout
		        android:id="@+id/list1top"
		        android:layout_marginTop="20dp"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:background="@drawable/listtop1"
		        android:orientation="horizontal" >
		
		        <TextView
		            android:id="@+id/fadm"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:layout_weight="3"
		            android:gravity="center"
		            android:text="@string/fangandaima"
		            android:textColor="@drawable/black"
		            android:textSize="@dimen/BodyFont" />
		
		        <TextView
		            android:id="@+id/scpc"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:layout_weight="4"
		            android:gravity="center"
		            android:text="@string/gui_ge_bian_hao"
		            android:textColor="@drawable/black"
		            android:textSize="@dimen/BodyFont" />
		
		        <TextView
		            android:id="@+id/count"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:layout_weight="5"
		            android:gravity="center"
		            android:text="@string/order_lotery_count"
		            android:textColor="@drawable/black"
		            android:textSize="@dimen/BodyFont" />
		    </LinearLayout>
		    <View
		        android:id="@+id/line2"
		        android:layout_width="match_parent"
		        android:layout_height="2dp"
		        android:background="@drawable/black" />
			<!-- 底部 列表 -->
		    <ListView
		        android:id="@+id/list1"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:descendantFocusability="blocksDescendants"
		        android:divider="#d1d1d1"
		        android:dividerHeight="1dp"
		        android:fadeScrollbars="false"
		        android:textSize="@dimen/BodyFont" />
		</LinearLayout>
		<!-- 这里是向上滑出指示和按钮 -->
		<TextView
		    android:id="@+id/show_finish"
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:gravity="center"
	        android:text="@string/common_next"
	        android:textColor="#FFFFFF"
		    android:background="#FF0000"
	        android:textSize="@dimen/BodyFont" />
	</LinearLayout>
	<!-- 顶部视图 -->
	<LinearLayout
	    android:id="@+id/finish_panel"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:visibility="gone"
	    android:orientation="vertical">
		<View android:layout_width="match_parent"
		    android:layout_height="35dp"></View>
		<!-- 顶部下划收起标识和按钮 -->
		<!--
		<TextView
		    android:id="@+id/hidden_finish"
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:gravity="center"
	        android:text="@string/common_back_scan"
		    android:background="#FF0000"
	        android:textColor="#FFFFFF"
	        android:textSize="@dimen/BodyFont" />
	        -->
		<!-- 扣款金额 -->
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="10"
	    	android:background="#FFFFFF" 
	        android:orientation="vertical" >
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal">
	    	<TextView
		        android:id="@+id/zfzje"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:layout_marginTop="5dp"
		        android:text="@string/yingfuzongjine"
		        android:textColor="@drawable/red"
		        android:textSize="@dimen/BodyFont" />
		
		    <TextView
		        android:id="@+id/zfzjevalue"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="10dp"
		        android:layout_marginTop="5dp"
		        android:text=""
		        android:textColor="@drawable/red"
		        android:textSize="@dimen/BodyFont" />
		</LinearLayout>
		
		<!-- 顶部列表 标题栏 -->
		<LinearLayout
	        android:id="@+id/list1top1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@drawable/listtop1"
	        android:orientation="horizontal" >
	
	        <TextView
	            android:id="@+id/fajc"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="3"
	            android:gravity="center"
	            android:text="@string/order_lotery_name"
	            android:textColor="@drawable/black"
	            android:textSize="@dimen/BodyFont" />
	
	        <TextView
	            android:id="@+id/zhangshu2"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="4"
	            android:gravity="center"
	            android:text="@string/order_lotery_count"
	            android:textColor="@drawable/black"
	            android:textSize="@dimen/BodyFont" />
	
	        <TextView
	            android:id="@+id/jine"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="5"
	            android:gravity="center"
	            android:text="@string/withdraw_amount"
	            android:textColor="@drawable/black"
	            android:textSize="@dimen/BodyFont" />
	    </LinearLayout>
		 <View
		        android:layout_width="match_parent"
		        android:layout_height="2dp"
		        android:background="@drawable/black" />
	    <ListView
	        android:id="@+id/list2"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:descendantFocusability="blocksDescendants"
	        android:divider="#d1d1d1"
	        android:dividerHeight="1dp"
	        android:fadeScrollbars="false"
	        android:textSize="@dimen/BodyFont" />
	    </LinearLayout>
	    <!-- 入库或完成按钮 -->
	    <Button
	        android:id="@+id/rukuokbtn"
	        android:layout_width="match_parent"
	        android:layout_height="45dp"
	        android:layout_marginLeft="10dp"
	        android:layout_marginRight="10dp"
	        android:layout_marginTop="5dp"
	        android:text="@string/rukuwancheng"
	        android:textColor="#ffffff"
	        android:textSize="@dimen/BodyFont"
	            style="@style/common_btn">
	    
	    </Button>
	    <View android:layout_width="match_parent"
		    android:layout_height="10dp"></View>
	</LinearLayout>
	
</FrameLayout>