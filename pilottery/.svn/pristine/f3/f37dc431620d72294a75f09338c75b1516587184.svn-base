<?xml version="1.0" encoding="utf-8"?>
<!-- 系统参数 -->
 <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="#ffffff">
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    android:paddingTop="20dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    	android:paddingLeft="40dp"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#303030"
            android:text="@string/string_device_type" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="@string/string_device_desc" />
	    <RadioGroup
	        android:id="@+id/radioGroup1"
	        android:orientation="horizontal" 
	        android:layout_width="wrap_content"
	        android:layout_height="40dp" >
	<!-- A:9600,B:19200、C:38400,D:57600,E:115200 -->
	        <RadioButton
	            android:id="@+id/radio9600"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:checked="true"
	            android:textColor="#000000"
	            android:text="A" />
	
	        <RadioButton
	            android:id="@+id/radio19200"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="#000000"
	            android:text="B" />
	
	        <RadioButton
	            android:id="@+id/radio38400"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="#000000"
	            android:text="C" />
	        
	        <RadioButton
	            android:id="@+id/radio57600"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="#000000"
	            android:text="D" />
	        
	        <RadioButton
	            android:id="@+id/radio115200"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="#000000"
	            android:text="E" />
	    </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="@string/sys_prmtr_ip_1" />

        <EditText
            android:id="@+id/ip_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLength="15"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="@string/sys_prmtr_port_1" />

        <EditText
            android:id="@+id/port_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="5"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="@string/sys_prmtr_ip_2" />

        <EditText
            android:id="@+id/ip_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:maxLength="15"
            android:textColor="#000000" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="@string/sys_prmtr_port_2" />

        <EditText
            android:id="@+id/port_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="5"
            android:textColor="#000000" />
    </LinearLayout>
	 <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	    android:paddingLeft="40dp"
	    android:paddingRight="40dp"
	        android:orientation="vertical" >
	    <Button
	        android:id="@+id/sys_change"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="16dp"
	        android:background="@drawable/storagebtn"
	    android:paddingLeft="40dp"
	    android:paddingRight="40dp"
	        android:text="@string/com_save"
	        android:textColor="#ffffff"
	        android:textSize="@dimen/BodyFont" />
	
	    <Button
	        android:id="@+id/sys_test_config"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="16dp"
	        android:background="@drawable/storagebtn"
	        android:paddingLeft="10dp"
	        android:paddingRight="10dp"
	        android:text="@string/sys_test_network"
	        android:textColor="#ffffff"
	        android:textSize="@dimen/BodyFont"
	        android:visibility="invisible" />
	</LinearLayout>
</LinearLayout>
</ScrollView>