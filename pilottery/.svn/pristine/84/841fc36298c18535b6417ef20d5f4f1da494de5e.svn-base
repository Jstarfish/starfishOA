<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff"
     >
	
	<!--确认出货--> 
	<LinearLayout
	    android:id="@+id/view"
	    android:layout_width="match_parent"
    	android:layout_height="wrap_content"
    	android:layout_marginBottom="80dp"
    	android:orientation="vertical" 
	    >
	    <LinearLayout
	        android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:paddingTop="5dp"
    		android:paddingBottom="5dp"
    		android:orientation="horizontal"
    		android:background="@drawable/ListTitleBackGround"
	        >
	        <TextView	            
	            android:layout_width="0dp"
    			android:layout_height="wrap_content" 
    			android:layout_weight="3"
				android:gravity="center"
	    		android:textSize="@dimen/BodyFont"
	    		android:textColor="@drawable/black"
	    		android:text="@string/order_lotery_name" 
	            />
	        <TextView	            
	            android:layout_width="0dp"
    			android:layout_height="wrap_content" 
    			android:layout_weight="3"
				android:gravity="right"
	    		android:textSize="@dimen/BodyFont"
	    		android:textColor="@drawable/black"
	    		android:text="@string/order_lotery_count" 
	            />
	        <TextView	            
	            android:layout_width="0dp"
    			android:layout_height="wrap_content" 
    			android:layout_marginRight="10dp"
    			android:layout_weight="5"
				android:gravity="right"
	    		android:textSize="@dimen/BodyFont"
	    		android:textColor="@drawable/black"
	    		android:text="@string/withdraw_amount" 
	            />
	    </LinearLayout>
		<View android:layout_width="match_parent" android:layout_height="2dp" android:background="@drawable/black" />
	    <ListView
	        android:id="@+id/list"
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="8"
	        android:fadeScrollbars="false"
	        android:listSelector="#ffffff"
	        style="@style/list_order_style"
	         >
	    </ListView>
	    <View 
	        android:layout_width="match_parent"
	        android:layout_height="1dp"
	        android:background="@drawable/ListItemLine" 
	        />
	</LinearLayout>
	<LinearLayout
        android:layout_width="match_parent"
   		android:layout_height="wrap_content"
   		android:layout_alignParentBottom="true"
   		android:layout_marginTop="8dp"
   		android:layout_marginLeft="15dp"
   		android:layout_marginRight="15dp"
   		android:layout_marginBottom="15dp"
   		android:orientation="vertical"
        >
		<TextView	
		    android:id="@+id/amount"   
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
	 		android:textSize="@dimen/MarkFont"
	 		android:textColor="#FF2028"
	 		android:text="@string/order_lotery_count" 
	        />
	    <TextView
	        android:id="@+id/money"	
	        android:layout_marginTop="5dp"               
	        android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
	  		android:textColor="#FF2028"
	  		android:text="@string/withdraw_amount" 
	        />
		<Button
		    android:layout_marginTop="5dp"   
		   	android:id="@+id/ensure"
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	style="@style/common_btn"
	    	android:text="@string/string_comfirm"
		    />	
	</LinearLayout>
</RelativeLayout>
