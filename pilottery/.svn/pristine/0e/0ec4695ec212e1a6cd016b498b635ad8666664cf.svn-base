
/** 切换城市 **/

 #city-list{
     background: white;
    -khtml-box-shadow: -1px 1px 3px rgba(0, 0, 0, 0.2);
    -moz-border-radius: 2px;
    -webkit-border-radius: 2px;
    -khtml-border-radius: 2px;
    border-radius: 2px;
    position: absolute;
    z-index: 2;
    display: none;
    overflow:hidden;
    border: 1px solid #e1e1e1;
    width:40%;
    height:400px;
    margin-top:-30px;
    /** margin-left:200px; */
}

#city-list .hei{
    float:left;
    font-size: 14px; 
    color: #fff;
    background:#363a40;
    width:100%;
    line-height:30px;
    border-top-left-radius:2px;
	border-top-right-radius:2px;
}
        
#city-list .l{
    float:left; 
    padding-left:10px;
    
    }
#city-list .r
{
    float:right;
    margin-right:10px;
    margin-top:7px;
    cursor:hand;
}

#city-list .r:hover
{
    opacity: 1.0;
    border-width:1px;
    border-style:solid;
}

#city-list .tab{
    padding-left:10px;
    overflow-y:auto;
    height:370px;
    
}

#city-table {
    display: none;
}
.city {
    font-size:14px;
}

.city a {
    color:#000;
    text-decoration:none;
    margin-right:10px;
}
.city a:hover {
    color:#27a0d7;
    text-decoration:underline;
}

.city strong a {
    color:#fd8905;
    font-weight:bold;
    text-decoration:none;
    text-align:left;
}

.city strong a:hover {
    color:#27a0d7;
    font-weight:bold;
    text-decoration:none;
}

.cur-area {
    font-size:16px;
     color:#fd8905;
     margin-left:10px;
     margin-right:5px;
}
#switchBtn {
    font-size:12px;
    color:#fd8905;
    text-align:left;
     }
#switchBtn a {
    font-size:12px;
     color:#fd8905;
     text-decoration:underline;
     text-align:left;
}
#switchBtn a:hover {
    font-size:12px;
     color:#2aa1d9;
     text-decoration:underline;
}

