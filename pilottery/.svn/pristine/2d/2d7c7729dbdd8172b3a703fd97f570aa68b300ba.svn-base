<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:paddingTop="5dp"
    tools:ignore="Overdraw" >

  <LinearLayout 
     			android:id="@+id/newLayout"
	    	android:orientation="horizontal"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	>
		    <LinearLayout 
		    	android:orientation="vertical"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	>
			    <!-- 站点编号 -->
			    <LinearLayout 
			    	android:orientation="horizontal"
			    	android:layout_width="match_parent"
			    	android:layout_height="wrap_content"
			    	>
			    	<TextView
				        android:id="@+id/zhangdianbianhao"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginLeft="10dp"
				        android:text="@string/withdraw_station_code"
				        android:textColor="@drawable/gray"
				        android:textSize="@dimen/BodyFont" />
			    	<TextView
				        android:id="@+id/zhangdianbianhaovalue"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:layout_marginLeft="10dp"
				        android:text=""
				        android:textColor="@drawable/gray"
				        android:textSize="@dimen/BodyFont" />
			    </LinearLayout>
		    </LinearLayout>
	    
		    <!-- 扫描按钮，扫面动画在一起 -->
		    <RelativeLayout
		        android:id="@+id/saomiaobtnimageimage"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="50dp"
		        android:layout_marginTop="5dp"
		        android:orientation="horizontal" >
		        <ImageView
		            android:id="@+id/saomiaoimageback"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
					android:visibility="invisible"
		            android:src="@drawable/scan1" >
		        </ImageView>
		        <ImageView
		            android:id="@+id/saomiaoimage"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
					 android:visibility="invisible"
		            android:src="@drawable/scan2" >
		        </ImageView>
		        <Button
		            android:id="@+id/saomiaobtn"
		            android:layout_width="45dp"
		            android:layout_height="45dp"
		            android:background="@drawable/redbtn1"
		             >
		        </Button>
		        <ImageView
		            android:id="@+id/saomiaoimage1"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginTop="4dp"
		            android:layout_marginLeft="4dp"
		            android:src="@drawable/saomiao" >
		        </ImageView>
			</RelativeLayout>
		</LinearLayout>
    
    <LinearLayout
        android:id="@+id/list1top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/newLayout"
        android:layout_marginTop="5dp"
        android:background="@drawable/listtop1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/fadm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"         
            android:gravity="center"   
            android:text="@string/fangandaima"
            android:textColor="@drawable/black"
            android:textSize="@dimen/BodyFont" />

        <TextView
            android:id="@+id/scpc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4" 
            android:gravity="center"   
            android:text="@string/shengchanpici"
            android:textColor="@drawable/black"
            android:textSize="@dimen/BodyFont" />

        <TextView
            android:id="@+id/count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5" 
            android:gravity="center"   
            android:text="@string/piaohao"
            android:textColor="@drawable/black"
            android:textSize="@dimen/BodyFont" />
    </LinearLayout>

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/list1top"
        android:background="@drawable/black" />

    <ListView
        android:id="@+id/list1"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_above="@+id/zfzje"
        android:layout_below="@+id/line2"
        android:descendantFocusability="blocksDescendants"
        android:divider="#d1d1d1"
        android:dividerHeight="1dp"
        android:fadeScrollbars="false"
        android:textSize="@dimen/BodyFont" />

    <TextView
        android:id="@+id/zfzjevalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/zfzje"
        android:layout_below="@+id/list1"
        android:layout_marginLeft="10dp"
            android:textColor="@drawable/red"
        android:layout_toRightOf="@+id/zfzje"
        android:text="0"
        android:textSize="@dimen/BodyFont" />

    <Button
        android:id="@+id/rukuokbtn"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="10dp"
            style="@style/common_btn"
        android:layout_marginBottom="10dp"
        android:text="@string/title_expiry"
        android:textColor="@drawable/white"
        android:textSize="@dimen/BodyFont" >
    </Button>

    <TextView
        android:id="@+id/zfzje"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/rukuokbtn"
        android:layout_alignLeft="@+id/rukuokbtn"
        android:text="@string/duijiangcount"
        android:textColor="@drawable/red"
        android:textSize="@dimen/BodyFont" />

</RelativeLayout>