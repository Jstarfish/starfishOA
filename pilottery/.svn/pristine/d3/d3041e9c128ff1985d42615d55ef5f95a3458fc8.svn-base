create or replace procedure p_cncp_issue_notify
/****************************************************************/
   -- 期次转换通知
   -- 这个存储过程会被job调用，避免影响主要流程
   -- add by Chen Zhen @ 2016-09-21
/*************************************************************/
(
  --------------输入----------------
  p_game                              in number,        -- 游戏编码
  p_issue                             in number         -- 游戏期号

) is
  v_ip                 varchar2(1000);
  v_temp               varchar2(4000);
begin
  -- 发送期次切换消息 modify by Chen Zhen @ 2016-09-20
  v_ip := f_get_sys_param('2004');
  if v_ip is not null and instr(v_ip, '.') <> 0 and v_ip <> '1.1.1.1:80' then
    select utl_http.request('http://' || v_ip || '/issueNotify/' || to_char(p_game) ||  '/' || to_char(p_issue)) into v_temp from dual;
  end if;
end;
