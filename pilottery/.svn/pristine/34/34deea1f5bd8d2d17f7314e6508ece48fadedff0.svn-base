create or replace procedure p_cncp_issue_state_change_job
/****************************************************************/
   -- 期次转换通知（任务）
   -- add by Chen Zhen @ 2016-09-21
/*************************************************************/
(
  --------------输入----------------
  p_game                              in number,        -- 游戏编码
  p_issue                             in number         -- 游戏期号

) is
begin
  dbms_scheduler.create_job(job_name   => 'J_C_IS' || p_game || '_' ||
                                          p_issue || '_' || seq_job.nextval,
                            job_type   => 'PLSQL_BLOCK',
                            job_action => 'begin p_cncp_issue_notify(' || p_game || ',' || p_issue || '); end;',
                            enabled    => TRUE);
end;
