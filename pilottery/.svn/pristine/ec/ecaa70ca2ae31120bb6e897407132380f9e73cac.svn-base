<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- 底部元素 -->
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="#FFFFFF"
	    android:orientation="vertical"
	    android:paddingTop="5dp" >
	    <!-- 除最下面指示划出按钮外的部分 -->
		<LinearLayout
		    android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="10"
		    android:orientation="vertical"
		    android:paddingTop="5dp" 
		    android:paddingBottom="20dp">
		    <LinearLayout 
		    	android:orientation="horizontal"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	>
			    <LinearLayout 
			    	android:orientation="vertical"
			    	android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	>
				    <!-- 站点编号 -->
				    <LinearLayout 
				    	android:orientation="horizontal"
				    	android:layout_width="match_parent"
				    	android:layout_height="wrap_content"
				    	>
				    	<TextView
					        android:id="@+id/quantity1"
					        android:layout_width="160dp"
					        android:layout_height="wrap_content"
					        android:layout_marginLeft="10dp"
					        android:text="@string/quantity1"
					        android:textColor="@drawable/black"
					        android:textSize="@dimen/BodyFont" />
				    	<TextView
					        android:id="@+id/quantity1_value"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:layout_marginLeft="10dp"
					        android:text="123"
					        android:textColor="@drawable/black"
					        android:textSize="@dimen/BodyFont" />
				    </LinearLayout>
				    <!-- 账户余额 -->
				    <LinearLayout 
				    	android:orientation="horizontal"
				    	android:layout_width="match_parent"
				    	android:layout_height="wrap_content"
				    	>
				    	<TextView
					        android:id="@+id/quantity2"
					        android:layout_width="160dp"
					        android:layout_height="wrap_content"
					        android:layout_marginLeft="10dp"
					        android:layout_marginTop="5dp"
					        android:text="@string/scan_tickets"
					        android:textColor="@drawable/black"
					        android:textSize="@dimen/BodyFont" />
					
					    <TextView
					        android:id="@+id/quantity2_value"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:layout_marginLeft="10dp"
					        android:layout_marginTop="5dp"
					        android:text=""
					        android:textColor="@drawable/black"
					        android:textSize="@dimen/BodyFont" />
				    </LinearLayout>
				    <LinearLayout 
				    	android:orientation="horizontal"
				    	android:layout_width="match_parent"
				    	android:layout_height="wrap_content"
				    	>
				    	<TextView
					        android:id="@+id/quantity3"
					        android:layout_width="160dp"
					        android:layout_height="wrap_content"
					        android:layout_marginLeft="10dp"
					        android:layout_marginTop="5dp"
					        android:text="@string/difference"
					        android:textColor="@drawable/black"
					        android:textSize="@dimen/BodyFont" />
					
					    <TextView
					        android:id="@+id/quantity3_value"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:layout_marginLeft="10dp"
					        android:layout_marginTop="5dp"
					        android:text=""
					        android:textColor="@drawable/black"
					        android:textSize="@dimen/BodyFont" />
				    </LinearLayout>
			    </LinearLayout>
		    
			</LinearLayout>
			<!-- 底部 列表标题栏 -->
		    <LinearLayout
		        android:id="@+id/list1top"
		        android:layout_width="match_parent"
		        android:layout_height="30dp"
		        android:background="@drawable/listtop1"
		        android:orientation="horizontal" >
			    <TextView
		            android:id="@+id/fadm"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:layout_weight="7"
		            android:gravity="center"
		            android:text="@string/gui_ge_bian_hao"
		            android:textColor="@drawable/black"
		            android:textSize="@dimen/BodyFont" />
		
		        <TextView
		            android:id="@+id/scpc"
		            android:layout_width="0dp"
		            android:layout_height="wrap_content"
		            android:layout_weight="5"
		            android:gravity="center"
		            android:text="@string/withdraw_state"
		            android:textColor="@drawable/black"
		            android:textSize="@dimen/BodyFont" />
		    </LinearLayout>
		    <View
		        android:id="@+id/line2"
		        android:layout_width="match_parent"
		        android:layout_height="2dp"
		        android:background="@drawable/black" />
			<!-- 底部 列表 -->
		    <ListView
		        android:id="@+id/list1"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:descendantFocusability="blocksDescendants"
		        android:divider="#d1d1d1"
		        android:dividerHeight="1dp"
		        android:listSelector="#00000000"
		        android:fadeScrollbars="false"
		        android:textSize="@dimen/BodyFont" />
		    <View
		        android:layout_width="match_parent"
		        android:layout_height="1dp"
		        android:background="#D1D1D1" />
		</LinearLayout>
	</LinearLayout>
	
</FrameLayout>
