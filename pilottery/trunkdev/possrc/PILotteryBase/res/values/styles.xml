<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="CustomWindowTitleBackground">
        <item name="android:background">#f40000</item>
    </style>

    <style name="title" parent="android:Theme">
        <item name="android:windowTitleSize">54dp</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomWindowTitleBackground</item>
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:padding">16dp</item>
    </style>
    
    <style name="list_menu_style">
        <item name="android:cacheColorHint">@null</item>
        <item name="android:listSelector">@drawable/list_item_selector</item>
        <item name="android:dividerHeight">1px</item>
        <item name="android:divider">@android:color/black</item>
    </style>
    
    <style name="list_withdraw_style">
        <item name="android:cacheColorHint">@null</item>
        <item name="android:listSelector">@drawable/list_item_selector</item>
        <item name="android:dividerHeight">1px</item>
        <item name="android:divider">@android:color/black</item>
    </style>
    
    <style name="list_order_style">
        <item name="android:cacheColorHint">@null</item>
        <item name="android:listSelector">@drawable/list_item_selector</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:divider">@drawable/ListItemLine</item>
    </style>
    <style name="common_btn">
        <item name="android:textColor">#ffffff</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:background">@drawable/storagebtn</item>
        <item name="android:textSize">@dimen/BodyFont</item>
    </style>
	<style name="list_order_style1">
        <item name="android:cacheColorHint">@null</item>
        <item name="android:listSelector">#ffffff</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:divider">@drawable/ListItemLine</item>
    </style>
</resources>
