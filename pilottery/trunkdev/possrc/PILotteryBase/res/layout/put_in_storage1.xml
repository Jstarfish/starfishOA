<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:paddingTop="5dp" >

    <TextView
        android:id="@+id/zhangdianbianhao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="@string/withdraw_station_code"
        android:textColor="@drawable/gray"
        android:textSize="@dimen/BodyFont" />

    <TextView
        android:id="@+id/zhangdianbianhaovalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/zhangdianbianhao"
        android:text=""
        android:textColor="@drawable/gray"
        android:textSize="@dimen/BodyFont" />

    <TextView
        android:id="@+id/zhanghuyue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/zhangdianbianhao"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="@string/withdraw_cash_total"
        android:textColor="@drawable/red"
        android:textSize="@dimen/BodyFont" />

    <TextView
        android:id="@+id/zhanghuyuevalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/zhanghuyue"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/zhangdianbianhao"
        android:text="0"
        android:textColor="@drawable/red"
        android:textSize="@dimen/BodyFont" />

    <RelativeLayout
        android:id="@+id/saomiaobtnimageimage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/zhanghuyue"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/saomiaoimageback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
           android:visibility="invisible"
            android:src="@drawable/saomiao1" >
        </ImageView>

        <ImageView
            android:id="@+id/saomiaoimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
           android:visibility="invisible"
            android:src="@drawable/saomiao2" >
        </ImageView>

        <Button
            android:id="@+id/saomiaobtn"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            style="@style/common_btn"
            android:text="@string/saomiaoruku"
            android:textColor="@drawable/white"
            android:textSize="@dimen/BodyFont" >
        </Button>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/list1top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/saomiaobtnimageimage"
        android:background="@drawable/listtop1"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/fadm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:text="@string/fangandaima"
            android:textColor="@drawable/black"
            android:textSize="@dimen/BodyFont" />

        <TextView
            android:id="@+id/scpc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center"
            android:text="@string/gui_ge_bian_hao"
            android:textColor="@drawable/black"
            android:textSize="@dimen/BodyFont" />

        <TextView
            android:id="@+id/count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center"
            android:text="@string/order_lotery_count"
            android:textColor="@drawable/black"
            android:textSize="@dimen/BodyFont" />
    </LinearLayout>

    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/list1top"
        android:background="@drawable/black" />

    <ListView
        android:id="@+id/list1"
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:layout_below="@+id/line2"
        android:divider="#d1d1d1"
        android:dividerHeight="1dp"
        android:fadeScrollbars="false"
        android:descendantFocusability="blocksDescendants"
        android:textSize="@dimen/BodyFont" />

    <TextView
        android:id="@+id/zfzje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list1"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="@string/yingfuzongjine"
        android:textColor="@drawable/red"
        android:textSize="@dimen/BodyFont" />

    <TextView
        android:id="@+id/zfzjevalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/zfzje"
        android:layout_below="@+id/list1"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/zfzje"
        android:text="0"
        android:textColor="@drawable/red"
        android:textSize="@dimen/BodyFont" />

    <Button
        android:id="@+id/rukuokbtn"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/zhanghuyue"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/zfzje"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="@string/rukuwancheng"
        android:textColor="#ffffff"
        android:textSize="@dimen/BodyFont"
            style="@style/common_btn">
    </Button>

    <LinearLayout
        android:id="@+id/list2top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rukuokbtn"
        android:layout_marginTop="5dp"
        android:background="@drawable/listback"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/fajc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:text="@string/order_lotery_name"
            android:textColor="@drawable/black"
            android:textSize="@dimen/BodyFont" />

        <TextView
            android:id="@+id/zhangshu2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:text="@string/order_lotery_count"
            android:textColor="@drawable/black"
            android:textSize="@dimen/BodyFont" />

        <TextView
            android:id="@+id/jine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:gravity="center"
            android:text="@string/withdraw_amount"
            android:textColor="@drawable/black"
            android:textSize="@dimen/BodyFont" />
    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/list2top"
        android:background="@drawable/black" />

    <ListView
        android:id="@+id/list2"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/line"
        android:divider="#d1d1d1"
        android:dividerHeight="1dp"
        android:fadeScrollbars="false"
        android:background="@drawable/listback"
        android:textSize="@dimen/BodyFont" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/saomiaobtnimageimage"
        android:layout_toRightOf="@+id/zhanghuyuevalue"
        android:text="@string/com_unit"
        android:textColor="@drawable/red"
        android:textSize="@dimen/BodyFont" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/zfzjevalue"
        android:layout_alignBottom="@+id/zfzjevalue"
        android:layout_centerHorizontal="true"
        android:text="@string/com_unit"
        android:textColor="@drawable/red"
        android:textSize="@dimen/BodyFont" />

</RelativeLayout>