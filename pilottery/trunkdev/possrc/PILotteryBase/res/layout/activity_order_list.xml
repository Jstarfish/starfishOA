<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >
     <!--查询订单-->   
    <RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" 
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
	    >
	    <TextView	   
	        android:id="@+id/text_station_code"         
            android:layout_width="wrap_content"
   			android:layout_height="wrap_content" 
   			android:paddingLeft="8dp"
    		android:textSize="@dimen/BodyFont"
    		android:textColor="#404040"
    		android:text="@string/withdraw_station_code" 
            />
	    <Button 
	        android:id="@+id/order_apply"
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_marginRight="8dp"
	    	android:layout_alignParentRight="true"
	    	android:textSize="@dimen/BodyFont"
	    	android:text="@string/title_activity_order_apply" 
	    	style="@style/common_btn"
	    	/>
	</RelativeLayout>
	<LinearLayout
        android:layout_width="match_parent"
   		android:layout_height="wrap_content"
    	android:paddingTop="5dp"
    	android:paddingBottom="5dp"
    	android:background="@drawable/ListTitleBackGround"
        >
        <TextView	            
            android:layout_width="0dp"
   			android:layout_height="wrap_content" 
			android:layout_weight="3"
			android:gravity="center"
    		android:textSize="@dimen/BodyFont"
    		android:textColor="#000000"
    		android:text="@string/withdraw_date" 
            />
        <TextView	            
            android:layout_width="0dp"
   			android:layout_height="wrap_content" 
			android:layout_weight="3"
			android:gravity="center"
    		android:textSize="@dimen/BodyFont"
    		android:textColor="#000000"
    		android:text="@string/order_lotery_name" 
            />
        <TextView	            
            android:layout_width="0dp"
   			android:layout_height="wrap_content" 
			android:layout_weight="3"
			android:gravity="right"
    		android:textSize="@dimen/BodyFont"
    		android:textColor="#000000"
    		android:text="@string/order_lotery_count" 
            />
        <TextView	            
            android:layout_width="0dp"
   			android:layout_height="wrap_content" 
			android:layout_weight="3"
			android:gravity="center"
    		android:textSize="@dimen/BodyFont"
    		android:textColor="#000000"
    		android:text="@string/withdraw_state" 
            />
    </LinearLayout>
    <ListView
        android:id="@+id/order_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadeScrollbars="false"
        style="@style/list_order_style" 
         >
    </ListView>
</LinearLayout>
