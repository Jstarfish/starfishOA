<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:paddingTop="20dp" >

    <TextView
        android:id="@+id/djzs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="@string/duijiangcount"
        android:textColor="@drawable/gray"
        android:textSize="@dimen/BodyFont" />

    <TextView
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/djzs"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/djzs"
        android:textColor="@drawable/gray"
        android:textSize="@dimen/BodyFont" />

    <TextView
        android:id="@+id/djje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/djzs"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/duijiangjine"
        android:textColor="@drawable/gray"
        android:textSize="@dimen/BodyFont" />

    <TextView
        android:id="@+id/jinevalue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/djje"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/djje"
        android:textColor="@drawable/gray"
        android:textSize="@dimen/BodyFont" />

    <LinearLayout
        android:id="@+id/list1top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/djje"
        android:background="@drawable/listtop1"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/fadm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/jiangjinruier"
            android:textColor="@drawable/black"
            android:textSize="@dimen/BodyFont" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/withdraw_state"
            android:textColor="@drawable/black"
            android:textSize="@dimen/BodyFont" />
    </LinearLayout>

    <ListView
        android:id="@+id/list1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@+id/list1top"
        android:fadeScrollbars="false"
        android:layout_marginTop="10dp"
	    style="@style/list_order_style1" 
        android:textSize="@dimen/BodyFont" />

</RelativeLayout>