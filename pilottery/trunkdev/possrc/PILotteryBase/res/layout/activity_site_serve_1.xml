<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="#ffffff"
    android:orientation="vertical" >
<!--站点服务 -->
    <TextView
        android:layout_marginTop="20dp"
 	    android:layout_width="wrap_content"
    	android:layout_height="wrap_content" 
    	android:textSize="@dimen/BodyFont"
   		android:textColor="#000000"
   		android:visibility="gone"
   		android:text="@string/site_input_siteNum"
 	    />   
	<LinearLayout
        android:layout_marginTop="25dp"
   		android:visibility="gone"
        android:layout_width="match_parent"
   		android:layout_height="wrap_content"
        >
        <EditText
            android:id="@+id/putIN_num"	            
            android:layout_width="200dp"
   			android:layout_height="wrap_content" 
    		android:textSize="@dimen/BodyFont"
    		android:inputType="number"
    		android:digits="1234567890." 
            android:maxLength="10" 
    		android:hint="@string/site_pInput_siteNum"
            />
        <Button	
            android:id="@+id/ensure"            
            android:layout_width="80dp"
            android:background="@drawable/storagebtn"
   			android:layout_height="wrap_content" 
    		android:layout_marginLeft="15dp"
    		style="@style/common_btn"
    		android:text="@string/string_comfirm" 
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/result"
        android:orientation="vertical"
        android:layout_width="match_parent"
   		android:layout_height="wrap_content"
        >
		<TextView
	 	    android:id="@+id/site_code"
	 	    android:layout_marginTop="20dp"
	 	    android:layout_width="wrap_content"
	    	android:layout_height="wrap_content" 
	    	android:textSize="@dimen/BodyFont"
	   		android:textColor="#000000"
	   		android:text="@string/withdraw_station_code"
	 	    />
		<TextView
	 	    android:id="@+id/site_name"
	 	    android:layout_marginTop="10dp"
	 	    android:layout_width="wrap_content"
	    	android:layout_height="wrap_content" 
	    	android:textSize="@dimen/BodyFont"
	   		android:textColor="#000000"
	   		android:text="@string/site_siteName"
	 	    />
		<TextView
	 	    android:id="@+id/man"
	 	    android:layout_marginTop="10dp"
	 	    android:layout_width="wrap_content"
	    	android:layout_height="wrap_content" 
	    	android:textSize="@dimen/BodyFont"
	   		android:textColor="#000000"
	   		android:text="@string/site_responMan"
	 	    />
		<TextView
	 	    android:id="@+id/phone"
	 	    android:layout_marginTop="10dp"
	 	    android:layout_width="wrap_content"
	    	android:layout_height="wrap_content" 
	    	android:textSize="@dimen/BodyFont"
	   		android:textColor="#000000"
	   		android:text="@string/site_phone"
	 	    />
		 <LinearLayout
		     android:layout_marginTop="30dp"
	         android:layout_width="match_parent"
	         android:layout_height="wrap_content"
	         
	         android:orientation="horizontal"
		     >
	
		    <Button
		         android:id="@+id/query_business"
		         android:layout_width="0px"
		         android:layout_height="wrap_content"
		         android:layout_weight="1"
		         android:paddingLeft="3dp"
		         android:paddingRight="3dp" android:layout_marginLeft="5dp"
		         android:textSize="@dimen/SpecialFont"
		         style="@style/common_btn"
	             android:text="@string/title_activity_query_business"
		         />
	  
	         <Button
		         android:id="@+id/froze_fund"
		         android:layout_width="0px"
		         android:layout_height="wrap_content"
		         android:layout_weight="1"
		         android:paddingLeft="3dp"
		         android:paddingRight="3dp" android:layout_marginLeft="5dp"
		         android:textSize="@dimen/SpecialFont"
		         style="@style/common_btn"
	             android:text="@string/title_activity_day_business"
		         />
	  
	         <Button
		         android:id="@+id/putIn_storage"
		         android:layout_width="0px"
		         android:layout_height="wrap_content"
		         android:layout_weight="1"
		         android:paddingLeft="3dp"
		         android:paddingRight="3dp" android:layout_marginLeft="5dp"
		         android:textSize="@dimen/SpecialFont"
		         style="@style/common_btn"
	             android:text="@string/site_putIn_storage"
		         />
	         
	      </LinearLayout>
	      <LinearLayout
	          android:id="@+id/tablelayout02"
	          android:layout_marginTop="30dp"
	          android:layout_width="match_parent"
	          android:layout_height="wrap_content"
	          android:orientation="horizontal"
			  >
			<Button
		         android:id="@+id/recharge"
		         android:layout_width="0px"
		         android:layout_height="wrap_content"
		         android:layout_weight="1"
		         android:paddingLeft="3dp"
		         android:paddingRight="3dp" android:layout_marginLeft="5dp"
		         android:textSize="@dimen/SpecialFont"
		         style="@style/common_btn"
	             android:text="@string/site_recharge"
		         />
		     <Button
		         android:id="@+id/acPrize"
		         android:layout_width="0px"
		         android:layout_height="wrap_content"
		         android:layout_weight="1"
		         android:paddingLeft="3dp"
		         android:paddingRight="3dp" android:layout_marginLeft="5dp"
		         android:textSize="@dimen/SpecialFont"
		         style="@style/common_btn"
	             android:text="@string/title_expiry"
		         />
	  			
	         <Button
			     android:id="@+id/order"
			     android:layout_width="0px"
			     android:layout_height="wrap_content"
			     android:layout_weight="1"
		         android:paddingLeft="3dp"
		         android:paddingRight="3dp" android:layout_marginLeft="5dp"
		         android:textSize="@dimen/SpecialFont"
			     style="@style/common_btn"
	             android:text="@string/title_activity_order"
	       		 />
	  
      		</LinearLayout>   
      		
	      <LinearLayout
	          android:id="@+id/tablelayout03"
	          android:layout_marginTop="30dp"
	          android:layout_width="match_parent"
	          android:layout_height="wrap_content"
	          android:orientation="horizontal"
			  >
	         
	         <Button
			     android:id="@+id/pickUp_goods"
			     android:layout_width="0px"
			     android:layout_height="wrap_content"
			     android:layout_weight="1"
		         android:paddingLeft="3dp"
		         android:paddingRight="3dp" android:layout_marginLeft="5dp"
		         android:textSize="@dimen/SpecialFont"
			     style="@style/common_btn"
	             android:text="@string/title_activity_withdraw"
	       		 />
	         <Button
			     android:id="@+id/returnOf_goods"
			     android:layout_width="0px"
			     android:layout_height="wrap_content"
		         android:paddingLeft="3dp"
		         android:paddingRight="3dp" android:layout_marginLeft="5dp"
		         android:textSize="@dimen/SpecialFont"
			     android:layout_weight="1"
			     style="@style/common_btn"
	             android:text="@string/site_returnOf_goods"
	       		 />
	         <Button
			     android:id="@+id/rev_btn_1"
			     android:visibility="invisible"
			     android:layout_width="0px"
			     android:layout_height="wrap_content"
		         android:paddingLeft="3dp"
		         android:paddingRight="3dp" android:layout_marginLeft="5dp"
		         android:textSize="@dimen/SpecialFont"
			     android:layout_weight="1"
			     style="@style/common_btn"
	             android:text="@string/site_returnOf_goods"
	       		 />
			</LinearLayout>   
	   </LinearLayout>
</LinearLayout>

