<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >
    <RelativeLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" 
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
	    >
	    <Button 
	        android:id="@+id/withdraw_apply"
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:layout_marginRight="20dp"
	    	android:layout_alignParentRight="true"
            android:textSize="@dimen/BodyFont"
            android:background="@drawable/storagebtn"
            style="@style/common_btn"
	    	android:text="@string/withdraw_apply" 
	    	/>
	</RelativeLayout>
	<LinearLayout
        android:layout_width="match_parent"
   		android:layout_height="wrap_content"
    	android:paddingTop="5dp"
    	android:paddingBottom="5dp"
    	android:background="@drawable/ListTitleBackGround"
        >
        <TextView	            
            android:layout_width="0dp"
   			android:layout_height="wrap_content" 
			android:layout_weight="3"
			android:layout_marginLeft="10dp"
			android:gravity="center"
    		android:textSize="@dimen/BodyFont"
    		android:textColor="@drawable/black"
    		android:text="@string/withdraw_date" 
            />
        <TextView	            
            android:layout_width="0dp"
   			android:layout_height="wrap_content" 
			android:layout_weight="6"
			android:gravity="right"
    		android:textSize="@dimen/BodyFont"
    		android:textColor="@drawable/black"
    		android:text="@string/withdraw_amount" 
            />
        <TextView	            
            android:layout_width="0dp"
   			android:layout_height="wrap_content" 
			android:layout_weight="5"
			android:gravity="center"
    		android:textSize="@dimen/BodyFont"
    		android:textColor="@drawable/black"
    		android:text="@string/withdraw_state" 
            />
        <TextView	            
            android:layout_width="0dp"
   			android:layout_height="wrap_content" 
			android:layout_weight="2"
			android:gravity="center"
    		android:textSize="@dimen/BodyFont"
    		android:textColor="@drawable/black"
    		android:text="@string/withdraw_operation" 
    		android:layout_marginRight="15dp"
            />
    </LinearLayout>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/black" />
    <ListView
        android:id="@+id/withdraw_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fadeScrollbars="false"
        style="@style/list_order_style" 
         >
    </ListView>
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/ListItemLine" />
</LinearLayout>
