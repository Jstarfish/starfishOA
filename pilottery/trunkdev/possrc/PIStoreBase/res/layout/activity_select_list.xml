<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical" >
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" >
	
	        <TextView
	            android:id="@+id/textView1"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="4"
	            android:gravity="center|right"
				android:layout_marginRight="10dp"
				android:textSize="@dimen/BodyFont"
	            android:textColor="#000000"
	            android:text="" />
	
	        <Spinner
	            android:id="@+id/spinner1"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="6"
	            android:dropDownWidth="match_parent"
	            android:spinnerMode="dialog" />
	
	    </LinearLayout>

    <LinearLayout
        android:id="@+id/panel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center|right"
			android:layout_marginRight="10dp"
			android:textSize="@dimen/BodyFont"
            android:textColor="#000000"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:textColor="#000000"
            android:text="TextView" />

    </LinearLayout>
    
    
    <LinearLayout
        android:id="@+id/panel2"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center|right"
			android:layout_marginRight="10dp"
			android:textSize="@dimen/BodyFont"
            android:textColor="#000000"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:textColor="#000000"
            android:text="TextView" />

    </LinearLayout>
    
    
    <LinearLayout
        android:id="@+id/panel3"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="center|right"
			android:layout_marginRight="10dp"
			android:textSize="@dimen/BodyFont"
            android:textColor="#000000"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:textColor="#000000"
            android:text="TextView" />

    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/list1top"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@drawable/listtop1"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >
	    <TextView
            android:id="@+id/tv1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="center"
            android:text="@string/specifications_"
            android:textColor="@drawable/black"
            android:textSize="@dimen/BodyFont" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:text="@string/code_"
            android:textColor="@drawable/black"
            android:textSize="@dimen/BodyFont" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:gravity="center"
            android:text="@string/order_lotery_count"
            android:textColor="@drawable/black"
            android:textSize="@dimen/BodyFont" />
    </LinearLayout>
    
    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/black" />

    <ListView
        android:id="@+id/listView1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6" >
    </ListView>
    </LinearLayout>
	 <Button
       android:id="@+id/btn_query"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="1"
       android:layout_marginLeft="6dp"
       android:layout_marginRight="6dp"
       android:layout_marginTop="5dp"
       android:layout_marginBottom="10dp"
       android:text="@string/store_check"
       android:textColor="#ffffff"
       android:textSize="@dimen/BodyFont"
       style="@style/common_btn">
   
   </Button>
</LinearLayout>
